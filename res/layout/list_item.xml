<?xml version="1.0" encoding="utf-8"?>  <LinearLayout           android:layout_width="fill_parent"           xmlns:android="http://schemas.android.com/apk/res/android"           android:orientation="vertical"          android:layout_height="wrap_content"           android:id="@+id/MyListItem"           android:paddingBottom="3dip"          android:background="@drawable/itembg"         android:layout_marginLeft="5dp"   		android:layout_marginRight="5dp"        android:paddingLeft="10dip">                <TextView                   android:layout_height="wrap_content"                   android:layout_width="wrap_content"                   android:id="@+id/date"                  android:layout_marginTop="15dp"   				android:textColor="#000000"                 android:textSize="17sp">          </TextView>          <TextView                   android:layout_height="wrap_content"                   android:layout_width="wrap_content"                   android:id="@+id/para"                   android:layout_marginTop="5dp" 				android:layout_weight="1"				android:textColor="#000000"                 android:textSize="13sp">          </TextView>           <TextView                   android:layout_height="wrap_content"                   android:layout_width="wrap_content"                   android:id="@+id/compare"                   android:layout_marginTop="5dp" 				android:layout_weight="1"				android:textColor="#000000"                 android:textSize="13sp">          </TextView>                  </LinearLayout >